{% extends 'mindmap.layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <!-- jquery-ui -->
    <link href="{{ asset('vendor/jquery/jquery-ui.css') }}" rel="stylesheet" type="text/css">

    <!-- context-menu -->
    <link href="{{ asset('vendor/jquery/jquery.contextMenu.css') }}" rel="stylesheet" type="text/css">

    <!-- MyMindMap -->
    <link href="{{ asset('css/MyMindMap.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}

    <div id="text-input-dialog" title="Modify node text" style="display: none;">
        <input type="text" id="text-input" />
    </div>

    <div id="url-input-dialog" title="Modify node url" style="display: none;">
        <input type="text" id="url-input" />
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendor/jquery/jquery.ui.position.js') }}"></script>
    <script src="{{ asset('vendor/jquery/jquery.contextMenu.js') }}"></script>
    <script src="{{ asset('vendor/svg.js') }}"></script>
    <script src="{{ asset('js/MyMindMap.js') }}"></script>

{% endblock %}
